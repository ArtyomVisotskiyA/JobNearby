<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_on_primary_emphasis_medium"
    tools:context=".job.AddVacancyActivity">

    <EditText
        android:id="@+id/edDisc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Описание:"
        android:inputType="textLongMessage"
        android:textColorHint="#330949"
        app:layout_constraintEnd_toEndOf="@+id/edTime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edTime"
        app:layout_constraintTop_toBottomOf="@+id/edPayment" />

    <EditText
        android:id="@+id/edTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Время:"
        android:inputType="textShortMessage|textPersonName|time"
        android:textColorHint="#330949"
        app:layout_constraintEnd_toEndOf="@+id/edAdress"
        app:layout_constraintStart_toStartOf="@+id/edAdress"
        app:layout_constraintTop_toBottomOf="@+id/edAdress" />

    <EditText
        android:id="@+id/edTitle"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Наименование:"
        android:inputType="textPersonName"
        android:textColorHint="#330949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Дата:"
        android:inputType="date|textPersonName"
        android:textColorHint="#330949"
        app:layout_constraintEnd_toEndOf="@+id/edTitle"
        app:layout_constraintStart_toStartOf="@+id/edTitle"
        app:layout_constraintTop_toBottomOf="@+id/edTitle" />

    <EditText
        android:id="@+id/edAdress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Адрес:"
        android:inputType="textPersonName"
        android:textColorHint="#330949"
        app:layout_constraintEnd_toEndOf="@+id/edDate"
        app:layout_constraintStart_toStartOf="@+id/edDate"
        app:layout_constraintTop_toBottomOf="@+id/edDate" />

    <EditText
        android:id="@+id/edPayment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Оплата:"
        android:inputType="number|textPersonName"
        android:textColorHint="#330949"
        app:layout_constraintEnd_toEndOf="@+id/edTime"
        app:layout_constraintStart_toStartOf="@+id/edTime"
        app:layout_constraintTop_toBottomOf="@+id/edTime" />

    <Button
        android:id="@+id/btDoneVacancy"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="156dp"
        android:backgroundTint="#330949"
        android:text="Готово "
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPayment" />
</androidx.constraintlayout.widget.ConstraintLayout>